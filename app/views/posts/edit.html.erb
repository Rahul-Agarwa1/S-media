
     
<%= form_for @post, local: true do |f| %>

  <%= f.label :title %>
  
    <%= f.text_field :title, placeholder: "Title of article" %>
  
  </br>
  <%= f.label :description %>
  
    <%= f.text_area :description, placeholder: "Description of article" %>

  
<%= f.submit %>

<% end %>

<%= link_to '[ Cancel and return to Posts listing ]', posts_path %>
 