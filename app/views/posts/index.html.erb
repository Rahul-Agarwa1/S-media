
  <table >
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Show</th>
      <th>Delete</th>
    </tr>
<% @post.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= link_to 'Show',post_path(post)  %></td>
      <% if can? :destroy, post %>
      <td><%= link_to 'Delete',post_path(post), method: :delete  %></td>
      <% end %>
    </tr>
<% end %>
  </table>

<%= link_to "Create New Post" ,new_post_path %> 

